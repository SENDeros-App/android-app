<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/big_padding_32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setting_options"
            android:layout_width="62dp"
            android:layout_height="54dp"
            android:padding="@dimen/little_padding_8"
            app:srcCompat="@drawable/setting_icon" />


        <LinearLayout
            android:elevation="20dp"
            android:id="@+id/linearLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@drawable/radius_mod_guest"
                android:elevation="20dp"
                android:src="@drawable/icon_user_guest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Modo invitado"
                android:textStyle="bold"
                android:textColor="@color/purple_Logo"/>
        </LinearLayout>

        <SearchView
            android:id="@+id/search_alert"
            style="@android:style/Widget.Material.Light.SearchView"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:animateLayoutChanges="false"
            android:background="@drawable/filterbar"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="@string/hint_searchView" />

    </LinearLayout>
</LinearLayout>