    <LinearLayout
        android:id="@+id/divisionCardview"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_division"
        android:orientation="horizontal"
        android:padding="@dimen/medium_padding_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--icono-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageDivision"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:contentDescription="Liga de bronce"
                android:paddingLeft="@dimen/little_padding_8"
                android:paddingRight="@dimen/little_padding_8"
                tools:src="@drawable/broceliga" />
        </LinearLayout>

        <!--texto-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitleDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:text="Division bronce" />

            <TextView
                android:id="@+id/TextDescriptionDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:gravity="center"
                tools:text=" entre los mejores caminantes!" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divisionCardview"
        tools:itemCount="5"
        tools:listitem="@layout/item_user" />


</androidx.constraintlayout.widget.ConstraintLayout>